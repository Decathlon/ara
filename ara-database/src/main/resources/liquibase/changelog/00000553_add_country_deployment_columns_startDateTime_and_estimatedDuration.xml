<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd"
                   logicalFilePath="ara/00000553_add_country_deployment_columns_startDateTime_and_estimatedDuration.xml">

    <changeSet id="00000553_add_country_deployment_columns_startDateTime_and_estimatedDuration" author="slaout">
        <addColumn tableName="country_deployment">
            <column name="start_date_time" type="datetime">
                <constraints nullable="true"/>
            </column>
            <column name="estimated_duration" type="bigint">
                <constraints nullable="true"/>
            </column>
            <column name="duration" type="bigint">
                <constraints nullable="true"/>
            </column>
        </addColumn>
    </changeSet>
    
</databaseChangeLog>
