management:
  metrics:
    web:
      server:
        request:
          autotime:
            enabled: true
    export:
      influx:
        enabled: false
        db: changeme
        user-name: changeme
        password: changeme
        uri: http://localhost:8086
        step: 15s
        auto-create-db: false

  endpoints:
    web:
      exposure:
        include: health,info,metrics,threaddump

  endpoint:
    health:
      probes:
        ## Auto configured in kubernetes env
        enabled: true
