<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd"
                   logicalFilePath="ara/00001200_create_table_scenario.xml">

    <changeSet id="00001200_create_table_scenario" author="slaout">
        <createTable tableName="scenario">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="test_category" type="varchar(13)">
                <constraints nullable="false"/>
            </column>
            <column name="feature_file" type="varchar(128)">
                <constraints nullable="false"/>
            </column>
            <column name="feature_name" type="varchar(128)">
                <constraints nullable="false"/>
            </column>
            <column name="feature_tags" type="varchar(256)">
                <constraints nullable="true"/>
            </column>
            <column name="tags" type="varchar(256)">
                <constraints nullable="true"/>
            </column>
            <column name="ignored" type="boolean">
                <constraints nullable="false"/>
            </column>
            <column name="country_codes" type="varchar(128)">
                <constraints nullable="true"/>
            </column>
            <column name="severity" type="varchar(32)">
                <constraints nullable="true"/>
            </column>
            <column name="name" type="varchar(512)">
                <constraints nullable="false"/>
            </column>
            <column name="line" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="content" type="clob">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <modifySql dbms="mysql">
            <append value=" ENGINE=INNODB ROW_FORMAT=DYNAMIC CHARSET=UTF8 COLLATE utf8_unicode_ci"/>
        </modifySql>
    </changeSet>

</databaseChangeLog>
