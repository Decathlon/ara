<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd"
                   logicalFilePath="ara/00000200_create_table_root_cause.xml">

    <changeSet id="00000200_create_table_root_cause" author="slaout">
        <createTable tableName="root_cause">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="name" type="varchar(128)">
                <constraints nullable="false" unique="true"/>
            </column>
        </createTable>
        <modifySql dbms="mysql">
            <append value=" ENGINE=INNODB ROW_FORMAT=DYNAMIC CHARSET=UTF8 COLLATE utf8_unicode_ci"/>
        </modifySql>
    </changeSet>

</databaseChangeLog>
