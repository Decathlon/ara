<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd"
                   logicalFilePath="ara/00000900_create_table_problem_pattern.xml">

    <changeSet id="00000900_create_table_problem_pattern" author="slaout">
        <createTable tableName="problem_pattern">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="problem_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="feature_file" type="varchar(128)">
                <constraints nullable="true"/>
            </column>
            <column name="feature_name" type="varchar(128)">
                <constraints nullable="true"/>
            </column>
            <column name="scenario_name" type="varchar(512)">
                <constraints nullable="true"/>
            </column>
            <column name="step" type="varchar(2048)">
                <constraints nullable="true"/>
            </column>
            <column name="step_definition" type="varchar(512)">
                <constraints nullable="true"/>
            </column>
            <column name="exception" type="clob">
                <constraints nullable="true"/>
            </column>
            <column name="release" type="varchar(16)">
                <constraints nullable="true"/>
            </column>
            <column name="country_code" type="varchar(2)">
                <constraints nullable="true"/>
            </column>
            <column name="type_code" type="varchar(10)">
                <constraints nullable="true"/>
            </column>
            <column name="type_is_browser" type="boolean">
                <constraints nullable="true"/>
            </column>
            <column name="type_is_mobile" type="boolean">
                <constraints nullable="true"/>
            </column>
            <column name="platform" type="varchar(16)">
                <constraints nullable="true"/>
            </column>
        </createTable>
        <modifySql dbms="mysql">
            <append value=" ENGINE=INNODB ROW_FORMAT=DYNAMIC CHARSET=UTF8 COLLATE utf8_unicode_ci"/>
        </modifySql>
    </changeSet>

</databaseChangeLog>
